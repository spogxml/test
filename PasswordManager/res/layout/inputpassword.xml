<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <TextView
        android:id="@+id/tv_inlgpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="输入登陆密码："
        android:textColor="@color/text_color"
        android:textSize="@dimen/textview_size" />

    <EditText
        android:id="@+id/et_inlgpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/tv_inlgpw"
        android:background="@drawable/et_shape"
        android:digits="@string/text_type"
        android:ems="10"
        android:inputType="textPassword"
        android:maxLength="@string/text_length" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/et_inlgpw" >

        <Button
            android:id="@+id/lg_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="确认"
            android:textColor="@color/text_color"
            android:textSize="@dimen/button_size" />

        <Button
            android:id="@+id/lg_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button_selector"
            android:text="取消"
            android:textColor="@color/text_color"
            android:textSize="@dimen/button_size" />
    </LinearLayout>

</RelativeLayout>